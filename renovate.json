{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
  
    "fileMatch": [
      "^apps/([^/]+/)+[^/]+\\.ya?ml$"
    ],
  
    "kustomize": {
      "fileMatch": [
        "^apps/([^/]+/)+kustomization\\.ya?ml$"
      ]
    },
  
    "packageRules": [
      {
        "matchManagers": ["kustomize"],
        "matchDatasources": ["git-tags"],
        "matchPackageNames": ["https://raw\\.githubusercontent\\.com/[^?]+\\?ref=v\\d+\\.\\d+\\.\\d+"],
        "datasourceTemplate": "github-tags",
        "registryUrls": ["https://github.com/"]
      }
    ],
  
    "hostRules": [
      {
        "hostType": "github",
        "matchHost": "raw.githubusercontent.com"
      }
    ]
  }
  