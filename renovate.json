{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
  
    "argocd": {
      "managerFilePatterns": ["^apps/([^/]+/)+[^/]+\\.ya?ml$"]
    },
  
    "fileMatch": [
      "^apps/([^/]+/)+[^/]+\\.ya?ml$",           
      "^apps/([^/]+/)+kustomization\\.ya?ml$",   
      "^apps/([^/]+/)+Chart\\.yaml$"             
    ],
  
    "kustomize": {
      "fileMatch": ["^apps/([^/]+/)+kustomization\\.ya?ml$"]
    },
  
    "helm": {
      "fileMatch": ["^apps/([^/]+/)+Chart\\.yaml$"]
    },

    "hostRules": [
      {
        "hostType": "github",
        "matchHost": "raw.githubusercontent.com"
      }
    ]
  }
  